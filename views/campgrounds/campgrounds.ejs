<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
       <h1>
        Welcome To Yelp Camp
      </h1>
      <p>
        View our hand picked Camp Grounds
      </p>
      <p>
        <a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Campgrounds</a>
      </p>
    </div>  
  </header>
  
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campGrounds.forEach(function(camps){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%=camps.image%>">
        <div class="caption">
          <h4>
            <%= camps.name %>
          </h4>
        </div>
        <p>
          <a href="/campgrounds/<%= camps._id%>" class="btn btn-primary">More Info</a>
        </p>
      </div>   
    </div>
  <%}) %>
  </div>

  <a href="/">Go back</a>
</div>


<% include ../partials/footer %>